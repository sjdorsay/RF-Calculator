                        <ComboBox Text="{Binding Path=SysProp.ThetaUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="0">
                            <ComboBoxItem Content="deg"></ComboBoxItem>
                            <ComboBoxItem Content="rad"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                    <Label Style="{StaticResource Header}" Margin="5 0" Content="Evaluate" />

                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="W" />
                        <TextBox Text="{Binding Path=Width, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <ComboBox Text="{Binding Path=WidthUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="0">
                            <ComboBoxItem Content="mm"></ComboBoxItem>
                            <ComboBoxItem Content="cm"></ComboBoxItem>
                            <ComboBoxItem Content="m"></ComboBoxItem>
                            <ComboBoxItem Content="mil"></ComboBoxItem>
                            <ComboBoxItem Content="inch"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="L" />
                        <TextBox Text="{Binding Path=Length, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <ComboBox Text="{Binding Path=LengthUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="0">
                            <ComboBoxItem Content="mm"></ComboBoxItem>
                            <ComboBoxItem Content="cm"></ComboBoxItem>
                            <ComboBoxItem Content="m"></ComboBoxItem>
                            <ComboBoxItem Content="mil"></ComboBoxItem>
                            <ComboBoxItem Content="inch"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Row 4 -->
                <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Checked="RadioButton_Checked" Unchecked="RadioButton_Unchecked" Content="Generate Report" HorizontalAlignment="Center" />
                
                <!-- Row 5 -->
                <Button Grid.Row="4" Grid.Column="0" Content="Synthesis" Margin="5 0" Click="TLine_Synthesis_Click" />

                <Button Grid.Row="4" Grid.Column="1" Content="Evaluate" Margin="5 0" Click="TLine_Evaluate_Click" />
            </Grid>
        </TabItem>

