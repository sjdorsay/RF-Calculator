                <Image Source="Images/TransmissionLines/Microstrip.png" Height="50" Width="50" />
            </TabItem.Header>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Button Grid.Column="1" Grid.Row="0" Template="{StaticResource HelpTemp}" Style="{StaticResource HelpStyle}" Click="Help_Button_Click" />

                <!-- Row 2 -->
                <Image Grid.Row="1" Grid.Column="0" Source="Images/TransmissionLines/Microstrip.png" Height="200" Width="200" />

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <Label Style="{StaticResource Header}" Margin="5 0" Content="Substrate"/>

                    <StackPanel Orientation="Horizontal" Margin="10 5 10 0">
                        <Label MinWidth="50" Padding="5">Dielectric</Label>
                        <ComboBox x:Name="tline_ms_diel_cb" SelectionChanged="DielCBSelectionChanged" MinWidth="100" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="30 0 10 0">
                        <TextBlock Margin="0 0 20 0" Text="ϵ_R:" />
                        <TextBox Text="{Binding Path=DielProp.Permitivity, Mode=TwoWay}" Width="50" IsEnabled="{Binding DielProp.IsCustom}"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="30 0 10 0">
                        <TextBlock Margin="0 0 10 0" Text="tan ẟ:" />
                        <TextBox Text="{Binding Path=DielProp.TanD, Mode=TwoWay}" Width="50" IsEnabled="{Binding DielProp.IsCustom}"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="30 0 10 0">
                        <TextBlock Margin="0 0 18 0" Text="CTE:" />
                        <TextBox Text="{Binding Path=DielProp.CTE, Mode=TwoWay}" Width="50" IsEnabled="{Binding DielProp.IsCustom}"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="H" />
                        <TextBox Text="{Binding Path=Height, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <ComboBox Text="{Binding Path=HeightUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="0">
                            <ComboBoxItem Content="mm"></ComboBoxItem>
                            <ComboBoxItem Content="cm"></ComboBoxItem>
                            <ComboBoxItem Content="m"></ComboBoxItem>
                            <ComboBoxItem Content="mil"></ComboBoxItem>
                            <ComboBoxItem Content="inch"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="t" />
                        <TextBox Text="{Binding Path=Thickness, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <ComboBox Text="{Binding Path=ThicknessUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="3">
                            <ComboBoxItem Content="mm"></ComboBoxItem>
                            <ComboBoxItem Content="cm"></ComboBoxItem>
                            <ComboBoxItem Content="m"></ComboBoxItem>
                            <ComboBoxItem Content="mil"></ComboBoxItem>
                            <ComboBoxItem Content="inch"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="f" />
                        <TextBox Text="{Binding Path=SysProp.Frequency, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <ComboBox Text="{Binding Path=SysProp.FrequencyUnits, Mode=OneWayToSource}" Width="Auto" SelectedIndex="1">
                            <ComboBoxItem Content="kHz"></ComboBoxItem>
                            <ComboBoxItem Content="MHz"></ComboBoxItem>
                            <ComboBoxItem Content="GHz"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                
                <!-- Row 3 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                    <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource Header}" Margin="5 0" Content="Synthesis"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="Z0" />
                        <TextBox Text="{Binding Path=SysProp.Impedance, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
                        <Label MinWidth="50" Padding="5" Content="Ω"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10 2">
