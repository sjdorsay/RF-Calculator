        <!-- Reflection Attenuator -->
        <TabItem x:Name="attReflTab">
            <TabItem.Header>
                <Image Source="Images/Attenuators/ReflectionAttenuator.png" Height="50" Width="50" />
            </TabItem.Header>

            <Grid>
                <Grid.ColumnDefinitions>
