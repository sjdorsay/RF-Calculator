                    <StackPanel Orientation="Horizontal" Margin="10 2">
                        <Label MinWidth="50" Padding="5" Content="R4" />
                        <TextBox Text="{Binding Path=Res4, Mode=TwoWay}" TextAlignment="Left" VerticalContentAlignment="Center" Width="100" />
